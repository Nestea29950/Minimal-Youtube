{
  "name": "Minimal Youtube",
  "description": "Minimal Youtube for distracted users",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": "images/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ]
}

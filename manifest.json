{
  "name": "YouTube Sans Distraction",
  "description": "Contrôlez ce que vous voyez sur YouTube et réduisez les distractions selon vos envies.",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "src/images/icon-16.png",
      "48": "src/images/icon-48.png",
      "128": "src/images/icon-128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["dist/content.js"],
      "type": "module",
      "run_at": "document_idle"
    }
  ],
  
  "icons": {
    "16": "src/images/icon-16.png",
    "48": "src/images/icon-48.png",
    "128": "src/images/icon-128.png"
  }
}
